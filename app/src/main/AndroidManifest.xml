<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gogreen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoGreen">
        <activity
            android:name=".add_post"
            android:exported="false"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".joinedDetails"
            android:exported="false"
            android:parentActivityName=".Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JoinActivity"
            android:exported="false"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityCreate"
            android:exported="false"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DonationHistory"
            android:exported="false"
            android:parentActivityName=".Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DonationAmount"
            android:exported="false"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile"
            android:exported="false"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GoGreen.NoActionBar" />
        <activity
            android:name=".SignUpPage"
            android:exported="false"
            android:parentActivityName=".LogInPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LogInPage"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>